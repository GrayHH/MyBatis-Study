<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!--namespace=绑定一个对应的mapper接口-->
<mapper namespace="com.demo.dao.UserMapper">

    <select id="getUserList" resultType="com.demo.pojo.User">
        select * from demo.user
    </select>

    <select id="getUserById" parameterType="int" resultType="com.demo.pojo.User">
        select * from demo.user where id = #{id}
    </select>

    <insert id="addUser" parameterType="com.demo.pojo.User">
        insert into demo.user (id, name, pwd) values (#{id},#{name},#{pwd});
    </insert>

    <update id="updataUser" parameterType="com.demo.pojo.User">
        update demo.user set name=#{name},pwd=#{pwd} where id = #{id};
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from demo.user where id = #{id};
    </delete>
</mapper>
